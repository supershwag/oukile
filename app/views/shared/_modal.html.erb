<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= cl_image_tag @item.finder.photo, height: 300, width: 400, crop: :fill, class: "avatar-meeting-modal" %>
        <%= @item.user_id %>
        <% @dispos.each do |dispo| %>
              <%= dispo.start_date %> <%= dispo.end_date %>| <%= @item.location %>
              <%= simple_form_for [@item, Meeting.new] do |f| %>
              <%= f.input :dispo_id, as: :hidden, input_html: { value: dispo.id } %>
              <%= f.submit "Accept", class: "btn btn-primary" %>
              <% end %>
          <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


