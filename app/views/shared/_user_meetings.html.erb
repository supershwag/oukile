<% @loser_meetings.each do |meeting| %>
<div class="product">
  <div class='product-upvote'>
  </div>
  <%= cl_image_tag meeting.dispo.item.finder.photo, height: 100, width: 100, crop: :fill, class: "product-image hidden-xs" %>
  <div class='product-body'>
    <h3><%= meeting.dispo.item.finder.first_name %></h3>
    <p><%= meeting.dispo.start_date %></p>
  </div>
  <div class="meetings-flex">
    <h3><%= meeting.dispo.item.name %></h3>
    <p><%= meeting.dispo.item.location %></p>
  </div>
    <%= link_to "Je l'ai!", meeting_path(meeting),
      method: :delete, class: "btn btn-danger meeting-delete-btn"
      %>
</div>
<% end %>
