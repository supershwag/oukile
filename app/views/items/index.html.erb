<div class = "container" id="filters-container">
<!--   <h2 style="font-size: 20px">Résultats de la recherche </h2> -->
    <div id="query">
      <strong> Catégorie: </strong>
      <% if params[:query_category].present? %>
      <em>  <%= params[:query_category]%>   </em>
       <% else %>
      <em>  Tous les objets trouvés   </em>
      <% end %>
    </div>
    <div id="query">
    <strong> Lieu: </strong>
    <% if params[:query_location].present? %>
    <em>  à <%= params[:query_location].downcase %>  </em>
    <% else %>
    <em>  partout    </em>
    <% end %>
    </div>
    <div id="query">
    <strong> Date: </strong>
    <% if params[:query_date].present? %>
    <em>  trouvé(s) le <%= params[:query_date]%>  </em>
    <% else %>
    <em>  toutes les dates    </em>
    <% end %>
    </div>
 <!--
  <div class = "btn btn-warning"> Location </div>
  <div class = "btn btn-danger"> Date found </div> -->
</div>

<div class="content">
  <div class="container" id = "search-results">
    <h4> <%= @items.length %> résultat(s) trouvé</h4>
    <div class="row">
      <% @items.each do |item| %>
        <% url = image_path('default.jpg') %>
        <div class="col-xs-12 col-sm-3 col-md-4">
          <div class="card" id="search-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path item.photo, height: 300, width: 400, crop: :fill %>')">
            <div class="card-header">
              <h2 class="card-category">
                <%= link_to item.name, item_path(item) %>
              </h2>
              <div class="card-description text-left">
              <p> <%= item.category %></p>
               <p> <%= item.location %> - <%= Date.parse(item.date_found).strftime('%d-%m-%Y') %></p>
               </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
  ></div>
  </div>
  </div>
