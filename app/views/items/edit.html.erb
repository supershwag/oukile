<div class="container">
  <%= simple_form_for [@item] do |f| %>
    <%= f.input :name, required: true %>
    <%= f.input :category, required: true %>
    <%= f.input :description, placeholder: "un doudou bleu et rouge..."%>
    <%= f.input :date_found, required: true %>
    <%= f.input :location, required: true %>
    <%= f.input :location_details, placeholder: "dans le train 4687 en provenance Paris, dans le bus 82..." %>
    <%= f.input :photo_id, required: true %>
    <%= f.input :reward, placeholder: "une bière, une image de Céline Dion..." %>
    <%= f.submit "Mettre en ligne l'objet trouvé", class: "btn btn-primary" %>
  <% end %>
</div>
  <h2>
  <%= link_to "Retour à la liste des objets trouvés", items_path %>
  </h2>
