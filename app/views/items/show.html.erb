  <% url = image_path('default.jpg') %>
  <div class="container">
    <div class="card card-show" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= url %>);'>


      <h2 class="card-category"><%= @item.name %></h2>
      <div class="card-description list-inline">

         <li><%= @item.category %></li>
         <li><%= @item.name %></li>
         <li><%= @item.description %></li>
         <li><%= @item.location %></li>
         <li><%= @item.location_detailed %></li>
         <li><%= @item.reward %></li>
   </div>
  </div>

  <div class="container">
    <% @dispos.each do |dispo| %>
      <li>
        <%= dispo.start_date %>
        <%= dispo.end_date%>
      </li>
    <% end %>

    <h2>
    <% if policy(@item).update? %>
      <%= link_to "Ajouter des disponibilités pour rendre l'objet", new_item_dispo_path(@item) %>
    <% end %>
    </h2>
    <%= link_to "Retourner à la liste", items_path, class: "btn btn-success" %>

  <% if policy(@item).update? %>
    <%= link_to "Mettre à jour l'objet", edit_item_path(@item.id), class: "btn btn-primary" %>
  <% end %>

  <% if policy(@item).destroy? %>
    <%= link_to "Effacer cet objet", item_path(@item.id),
        method: :delete,
        data: { confirm: "Voulez-vous vraiment effacer cet objet ?" },
        class: "btn btn-danger", id: "sweet-alert-demo" %>
  <% end %>
  </div>
